@using Common.Resources
@using Model.DTO
@using OwlTesting.ViewModels
@model SubjectDTO

<form asp-action="EditSubject" role="form" method="post">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = General.SubjectEditing })
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <label asp-for="Name" class="col-lg-3 col-sm-3 control-label">Назва: </label>
                <div class="col-lg-9">
                    <input asp-for="Name" class="form-control" required/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Describtion" class="col-lg-3 col-sm-3 control-label">Опис: </label>
                <div class="col-lg-9">
                    <textarea asp-for="Describtion" class="form-control" rows="25" ></textarea>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>