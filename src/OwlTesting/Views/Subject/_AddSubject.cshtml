@using Common.Resources
@using Model.DTO
@using OwlTesting.ViewModels
@model SubjectDTO

<form asp-action="AddSubject" role="form" method="post">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = General.SubjectAdding})
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="form-group">
                <label asp-for="Name" class="col-lg-3 col-sm-3 control-label">Назва предмету: </label>
                <div class="col-lg-6">
                    <input asp-for="Name" class="form-control" required/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Describtion" class="col-lg-3 col-sm-3 control-label">Опис: </label>
                <div class="col-lg-6">
                    <input asp-for="Describtion" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter",new ModalFooter { })
</form>