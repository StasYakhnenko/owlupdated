@using Common.Resources
@using Common
@using Common.Helpers
@using Model.DTO
@model TestStatsDTO
@{
	Layout = null;
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/yeti/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-2">
			<img class="img-responsive" src="https://i.imgur.com/2pYtpj4.jpg" />
		</div>
		<div class="col-xs-10">

		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<h5>@General.Name: <b>@Model.Test.Name</b></h5>
			<h5>@General.Subject: <b>@Model.Test.Subject.Name</b> </h5>
			<h5>@General.CountOfPassings: <b>@(Model.Results?.Count ?? 0)</b></h5>
		</div>
		<div class="col-xs-12 no-print">
			<br />
			<button class="btn btn-primary btn-sm" onclick="window.print();">@General.Print <i class="glyphicon glyphicon-print"></i></button>
			<br />
		</div>
	</div>
	<br />
	<div class="row">
		<div class="col-xs-12">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>@General.Id</th>
						<th>@General.User</th>
						<th>@General.TimeStart</th>
						<th>@General.TimeFinish</th>
						<th>@General.Status</th>
						<th>@General.Grade (@General.Max - @Model.Test.Grade)</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var result in Model.Results)
					{
						<tr>
							<td>@result.Id</td>
							<td>@result.User.FullName</td>
							<td>@result.TimeStart</td>
							<td>@result.TimeEnd</td>
							<td>@(EnumHelper<StatusTest>.GetDisplayValue(result.Status))</td>
							<td>@result.ResultGrade</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"></script>