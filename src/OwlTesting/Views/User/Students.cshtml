@using Common.Resources
@using Common
@using Common.Helpers
@using Model.DTO
@using OwlTesting.ViewModels
@model  IEnumerable<StudentListViewModel>
@{
	Layout = null;
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/yeti/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-2">
			<img class="img-responsive" src="https://i.imgur.com/2pYtpj4.jpg" />
		</div>
		<div class="col-xs-10">

		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<h3>Студенти</h3>
		</div>
	</div>
	<form asp-action="Students" role="form" method="get" class="no-print">
		<div class="row">
			<div class="col-sm-4 form-horizontal">
				<div class="form-group">
					<label for="group" class="col-sm-1 control-label">Група</label>
					<div class="col-sm-11">
						<input type="text" class="form-control" id="group" name="group" value="@ViewBag.Group">
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<button type="submit" class="btn btn-success">Пошук</button>
			</div>
		</div>
	</form>
	<div class="row">
		<div class="col-xs-12 no-print">
			<br />
			<button class="btn btn-primary btn-sm" onclick="window.print();">@General.Print <i class="glyphicon glyphicon-print"></i></button>
			<br />
		</div>
	</div>
	<br />
	<div class="row">
		<div class="col-xs-12">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>@General.StudentId</th>
						<th>@General.Group</th>
						<th>@General.FullName</th>
						<th>@General.LoginName</th>
						<th>@General.Password</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var student in Model)
					{
						<tr>
							<td>@student.StudentId</td>
							<td>@student.Group</td>
							<td>@student.FullName</td>
							<td>@student.Name</td>
							<td>@student.Password</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"></script>