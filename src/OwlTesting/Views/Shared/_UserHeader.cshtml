@using Microsoft.AspNetCore.Identity
@using OwlTesting.ViewModels
@using Model.DB
@using Common.Resources

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
	<form asp-area="" asp-controller="Account" asp-action="SignOff" method="post" id="logoutForm" class="navbar-right">
		<ul class="nav navbar-nav navbar-right">
			<li>
				<a asp-area="" asp-controller="Test" asp-action="TestsByUser" title="Manage">Привіт, @UserManager.GetUserName(User)</a>
			</li>
			<li>
				<button type="submit" class="btn btn-link navbar-btn navbar-link">@General.Logoff</button>
			</li>
		</ul>
	</form>
}
else
{
    <ul class="nav navbar-nav navbar-right">      
        <li><a asp-area="" asp-controller="Account" asp-action="Login">@General.Login</a></li>
    </ul>
}
